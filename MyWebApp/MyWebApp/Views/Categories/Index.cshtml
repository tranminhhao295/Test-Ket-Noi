@model IEnumerable<MyWebApp.Models.Category>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh sách Danh mục</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                + Thêm mới
            </a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped table-hover" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>
                    Tên danh mục
                </th>
                <th>
                    Thứ tự hiển thị
                </th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">
                            @item.Name
                        </td>
                        <td width="30%">
                            @item.DisplayOrder
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">
                                    Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">Chưa có danh mục nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>